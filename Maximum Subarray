class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int max_sum = INT_MIN;
        if(nums.size() == 1){
            return nums[0];
        }
        int sum = 0;
        for(int i = 0; i < nums.size(); i++){
            sum += nums[i];
            if(sum > max_sum){
                max_sum = sum;
            }
            if(sum < 0)
                sum = 0;
        }
        int ans = max_sum;
        
        return ans;
    }
};
